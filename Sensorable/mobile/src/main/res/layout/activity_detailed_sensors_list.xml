<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedSensorsList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="192dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Tus datos detallados"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Estos son tus datos biométricos monitorizados"
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/proximityLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proximityImage"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/radar_icon" />

                <TextView
                    android:id="@+id/proximityText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="proximity"
                    android:textSize="32sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lightLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="10dp"

                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lightImage"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/light_icon" />

                <TextView
                    android:id="@+id/lightText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="light"
                    android:textSize="32sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accelerometerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accelerometerImage"
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/gravity" />

                <TextView
                    android:id="@+id/acceleromterText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="accelerometer"
                    android:textSize="22sp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/temperatureLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/temperatureImage"
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/temperature_icon" />

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temperature"
                    android:textSize="32sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/humidityLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="0"
                android:layout_margin="10dp"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/humidityImage"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/humidity_icon" />

                <TextView
                    android:id="@+id/humidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="humidity"
                    android:textSize="32sp" />


            </LinearLayout>

            <Button
                android:id="@+id/advancedMenuButton"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="0"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Menú avanzado"
                android:textAlignment="center" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>