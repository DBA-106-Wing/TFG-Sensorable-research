<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdvancedMenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/adlOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_margin="10dp"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adlOptionsImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/fitness_icon" />

                <TextView
                    android:id="@+id/adlOptionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ADLS Y ESTADISTICAS"
                    android:textAlignment="textStart"
                    android:textSize="27sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/locationOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customborder"
                android:backgroundTint="#E8E8E8"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/locationOptionsImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/location_icon" />

                <TextView
                    android:id="@+id/locationOptionstext"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="CONFIGURAR UBICACIONES"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="27sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/bluetoothOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:background="@drawable/customborder"
                    android:backgroundTint="#E8E8E8"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bluetoothOptionsImage"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        app:srcCompat="@drawable/bluetooth_icon" />

                    <TextView
                        android:id="@+id/bluetoothOptionsText"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="CONFIGURAR BLUETOOTH"
                        android:textAlignment="textStart"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>